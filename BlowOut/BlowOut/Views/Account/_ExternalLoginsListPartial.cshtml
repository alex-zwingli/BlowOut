@model BlowOut.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security


<main>
    <script src="~/Scripts/SocialButton.js"></script>
    <link href="~/Content/SocialButtons.css" rel="stylesheet" />

</main>



<h4>Use another service to log in.</h4>
<hr />

<!-- Login Buttons -->
    <form action="/Account/ExternalLogin" method="post">
        @Html.AntiForgeryToken()
        <div id="socialLoginList">
            <p>
                <button type="submit" class="btn btn-block btn-social btn-facebook" id="Facebook" name="provider" value="Facebook" title="Log in using your Facebook account"><i class="fa fa-facebook"></i> Sign in with Facebook</button>
                <button type="submit" class="btn btn-block btn-social btn-twitter" id="Twitter" name="provider" value="Twitter" title="Log in using your Twitter account"><i class="fa fa-twitter"></i> Sign in with Twitter</button>
                <button type="submit" class="btn btn-block btn-social btn-google-plus" id="Google" name="provider" value="Google" title="Log in using your Google account"><i class="fa fa-google-plus"></i> Sign in with Google</button>
                <button type="submit" class="btn btn-block btn-social btn-microsoft" id="Microsoft" name="provider" value="Microsoft" title="Log in using your Microsoft account"><i class="fa fa-windows"></i> Sign in with Microsoft</button>
            </p>
        </div>
    </form>



















